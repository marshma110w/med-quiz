<%= render 'shared/errors', object: @user %>
<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_with model: @user, data: { turbo: false } do |form| %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.text_field :name, required: true, minlength: 3  , placeholder: 'Иван Иванов', class: "form-control" %>
                      <%= form.label :name, "Имя пользователя: " %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-solid fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.email_field :email, required: true, placeholder: 'ivan123@mail.ru', class: 'form-control' %>
                      <%= form.label :email, "E-mail:" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-solid fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password, class: 'form-control' %>
                      <%= form.label :password, "Пароль:" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fa-solid fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <%= form.password_field :password_confirmation, class: 'form-control' %>
                      <%= form.label :password_confirmation, "Повторите пароль:" %>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                      <div class="form-outline flex-fill mb-0">
                          <%= form.password_field :old_password, class: 'form-control' %>
                          <%= form.label :old_password, "Введите старый пароль:" %>
                      </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit ("Сохранить"), class: "btn btn-primary btn-lg" %>
                  </div>
              <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
