<% provide :page_title, 'Sign Up' %>

<h1>Registration</h1>

<%= render 'shared/errors', object: @user %>

<%= form_with model: @user, data: { turbo: false } do |form| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :name %>
    </div>

    <div class="col-sm-10">
      <%= form.text_field :name, required: true, minlength: 3  , placeholder: 'Ivan', class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :email %>
    </div>

    <div class="col-sm-10">
      <%= form.email_field :email, required: true, placeholder: 'ivan@mail.ru', class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :password %>
    </div>

    <div class="col-sm-10">
      <%= form.password_field :password, required: true, class: 'form-control' %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= form.label :password_confirmation %>
    </div>

    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, required: true, class: 'form-control' %>
    </div>
  </div>

  <%= form.submit "Sign up", class: "btn btn-primary btn-lg" %>
<% end %>
