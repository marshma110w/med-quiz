<h1> New user </h1>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <div class="alert alert-danger"> <%= msg %> </div>
  <% end %>
<% end %>
<div class="col-2">
<%= form_with model: @user, data: { turbo: false } do |form| %>
  <%= form.label :name, "Имя: " %>
  <%= form.text_field :name %>
  <%= form.label :email, "Email:" %>
  <%= form.text_field :email %>
  <%= form.submit %>
<% end %>
</div>
